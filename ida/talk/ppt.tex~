    \begin{subfigure}[b]{0.3\textwidth}
        \includegraphics[width=\textwidth,height=1in]{figs/animal1}
        \caption{A Zebra}
        \label{fig:Zebra}
    \end{subfigure}
       \begin{subfigure}[b]{0.3\textwidth}
        \includegraphics[width=\textwidth,height=1in]{figs/animal2}
